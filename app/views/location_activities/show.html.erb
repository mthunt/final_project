<div class="page-header">
  <h3>Location Activity #<%= @location_activity.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Location</dt>
      <dd>
        <% if @location_activity.city.present? %>
          <a href="/locations/<%= @location_activity.location_id %>">
            <%= @location_activity.city.city_name %>
          </a>
        <% end %>
      </dd>

      <dt>Activity</dt>
      <dd>
        <% if @location_activity.feature.present? %>
          <a href="/activities/<%= @location_activity.activity_id %>">
            <%= @location_activity.feature.activity %>
          </a>
        <% end %>
      </dd>

      <dt>Feature rating</dt>
      <dd><%= @location_activity.feature_rating %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/location_activities" class="btn btn-primary">
        Back
      </a>
      <a href="/location_activities/<%= @location_activity.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_location_activity/<%= @location_activity.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
