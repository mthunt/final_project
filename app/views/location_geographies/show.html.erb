<div class="page-header">
  <h3>Location Geography #<%= @location_geography.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Geography</dt>
      <dd>
        <% if @location_geography.geography.present? %>
          <a href="/geographies/<%= @location_geography.geography_id %>">
            <%= @location_geography.geography.geography %>
          </a>
        <% end %>
      </dd>

      <dt>Location</dt>
      <dd>
        <% if @location_geography.location.present? %>
          <a href="/locations/<%= @location_geography.location_id %>">
            <%= @location_geography.location.city_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/location_geographies" class="btn btn-primary">
        Back
      </a>
      <a href="/location_geographies/<%= @location_geography.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_location_geography/<%= @location_geography.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
