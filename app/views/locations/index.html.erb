<div class="page-header">
  <h1>
    Locations
    <a href="/locations/new" class="btn btn-lg btn-success">New Location</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "locations_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :city_name_cont, "City name contains" %>
    <%= f.text_field :city_name_cont, :class => "form-control", :placeholder => "City name contains" %>
  </div>

<div class="form-group">
  <%= f.label :long, "Long" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :long_gteq, :class => "form-control", :placeholder => "Long greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :long_lteq, :class => "form-control", :placeholder => "Long less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :lat, "Lat" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :lat_gteq, :class => "form-control", :placeholder => "Lat greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :lat_lteq, :class => "form-control", :placeholder => "Lat less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :country_name_cont, "Country name contains" %>
    <%= f.text_field :country_name_cont, :class => "form-control", :placeholder => "Country name contains" %>
  </div>

<div class="form-group">
    <%= f.label :state_name_cont, "State name contains" %>
    <%= f.text_field :state_name_cont, :class => "form-control", :placeholder => "State name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :features_activity_cont, "Activity activity contains" %>
      <%= f.text_field :features_activity_cont, :class => "form-control", :placeholder => "Activity activity contains" %>
    </div>

<div class="form-group">
      <%= f.label :geographies_geography_cont, "Geography geography contains" %>
      <%= f.text_field :geographies_geography_cont, :class => "form-control", :placeholder => "Geography geography contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/locations" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#locations_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>City name</th>
        <th>State name</th>
        <th>Country name</th>
        <th>Lat</th>
        <th>Long</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @locations.each do |location| %>
      <tr>
        <td><%= location.city_name %></td>
        <td><%= location.state_name %></td>
        <td><%= location.country_name %></td>
        <td><%= location.lat %></td>
        <td><%= location.long %></td>
        <td><img src='<%= location.image %>' class='img-responsive'></td>
        <td>
          <a href="/locations/<%= location.id %>" class="btn btn-primary">Show</a>
          <a href="/locations/<%= location.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_location/<%= location.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @locations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
